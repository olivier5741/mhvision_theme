<!DOCTYPE html>
<head>
  <meta name="description" content="{{ site.description }}" />
  <meta name="author" content="{{ site.title }}" />
  <meta name="keywords" content="{{ site.keywords }}" />
  <koken:title />
  <koken:settings />
</head>
<body>
<header>
  <h1>{{ site.title }}</h1> 
  <nav>
    <koken:navigation />
  </nav>
</header>
<koken:load>
  <ol class="grid">
    <koken:loop>
      <li>
        <koken:link>
          <koken:img/>
        </koken:link>
        <h2> 
          <koken:link>
            {{ album.title }} 
          </koken:link>
        </h2> 
      </li>
    </koken:loop>
  </ol>
<koken:else>
  <koken:note>
    No public albums found 
  </koken:note>
</koken:load>
<footer>
  {{ site.copyright }} 
</footer>
</body>
</html>